<!DOCTYPE html>
<html style="min-height: 100vh;">

<head>
  <title>Plataforma Redigindo</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag asset_path('favicon.ico') %>

  <style>
    input {
      outline: none;
    }

    .main-card {
      width: 500px;
      min-height: 400px;
      border-radius: 50px;
      padding: 35px 45px;
      margin-bottom: 10px;
    }

    .bg {
      background-image: url( '<%= asset_path "bg_redigindo.png" %>' );
      background-repeat: repeat-y;
      background-size: 100%;
    }

    .logo {
      width: 500px;
      padding: 12px;
    }

    .logo img {
      display: block;
      width: 324px;
      height: 90px;
    }

    .field-div {
      margin-top: 10px;
      width: 100%;
    }

    .input-label {
      font-size: 0.96em;
      margin-left: 20px;
      margin-bottom: 5px;
      margin-top: 5px;
    }

    .input-div {
      transition: border-width 100ms ease-in-out;
      transition: border-color 200ms ease-in-out;
    }

    .submit-div {
      margin-top: auto;
    }

    .btn-inicial:hover {
      color: white !important;

    }

    .border-2 {
      border-width: 2px !important;
    }
  </style>
</head>

<body class="bg-primary" style="min-height: inherit">
  <main class="d-flex flex-column bg justify-content-center align-items-center" style="min-height: inherit;">
    <div class="logo d-flex justify-content-center">
      <%= link_to (image_tag "logo_redigindo_white.png", class: "img-fluid", alt: "Logo Redigindo"), root_path %>
    </div>
    <div class="d-flex flex-column align-items-center">
      <% if success %>
      <div class="alert alert-success alert-dismissable fade show rounded-pill" style="min-width: 450px;">
        <%= success %>
        <button type="button" class="close" aria-label="Close" data-dismiss="alert">
          <span aria-hidden="true" style="margin-left: 15px">&times;</span>
        </button>
      </div>
      <% elsif error %>
      <div class="alert alert-danger alert-dismissable fade show rounded-pill" style="min-width: 450px;">
        <%= error %>
        <button type="button" class="close" aria-label="Close" data-dismiss="alert">
          <span aria-hidden="true" style="margin-left: 15px">&times;</span>
        </button>
      </div>
      <% elsif warning %>
      <div class="alert alert-warning alert-dismissable fade show rounded-pill" style="min-width: 450px;">
        <%= warning %>
        <button type="button" class="close" aria-label="Close" data-dismiss="alert">
          <span aria-hidden="true" style="margin-left: 15px">&times;</span>
        </button>
      </div>
      <% elsif info %>
      <div class="alert alert-info alert-dismissable fade show rounded-pill" style="min-width: 450px;">
        <%= info %>
        <button type="button" class="close" aria-label="Close" data-dismiss="alert">
          <span aria-hidden="true" style="margin-left: 15px">&times;</span>
        </button>
      </div>
      <% end %>

      <div class="card shadow main-card d-flex justify-content-around">
        <%= yield %>
      </div>

      <script>
        var inputs = [
          '#session_email',
          '#session_password',
          '#email',
          '#student_user_attributes_email',
          '#student_user_attributes_username',
          '#student_user_attributes_password',
          '#student_user_attributes_password_confirmation',
          '#student_user_attributes_name',
          '#student_user_attributes_birth_date',
          '#student_user_attributes_cpf',
          '#student_user_attributes_rg',
          '#student_user_attributes_address_id',
          '#student_classroom_id',
          '#student_school_id',
          '#student_category_id',
          '#user_password',
          '#user_password_confirmation'
        ]

        $.each(inputs, function (value) {

          $(inputs[value]).focus(function () {
            $(inputs[value]).parent().removeClass('border-dark').addClass('border-2 border-secondary');
          }).blur(function () {
            $(inputs[value]).parent().removeClass('border-2 border-secondary').addClass('border-dark');
          })
        })

      </script>
  </main>
</body>

</html>