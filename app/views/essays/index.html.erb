<div class="row">
  <div class="col-md-12">
    <div class="card mb-3 text-dark shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Redações Recebidas</h5>
        <div class="table-responsive-md">
          <table class="table table-bordered table-striped  ">
            <thead>
              <th style="width: 35%;">Tema</th>
              <th style="width: 30%;">Enviada por</th>
              <th style="width: 15%;">Data de Envio</th>
              <th style="width: 10%;">Categoria</th>
              <th style="width: 10%;">Arquivo</th>
            </thead>
            <tbody>
              <% @essays.each do |essay| %>
              <tr>
                <td class="align-middle"><%= essay.theme.description %></td>
                <td class="align-middle"><%= essay.student.user.username %></td>
                <td class="align-middle"><%= essay.submission_date.strftime("%d/%m/%Y") %></td>
                <td class="align-middle"><%= essay.category.description %></td>
                <td class="align-middle">
                  <a href="" data-toggle="modal" data-target="#essayModal">
                    <span data-toggle="tooltip" data-placement="top" title="Ver Arquivo">
                      <%= fa_icon 'file-alt' %>
                    </span>
                  </a>

                  <div id="essayModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="essayModal"
                    aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title">Redação Enviada</h4>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body align-self-center">
                          <%= image_tag essay.file.variant(resize: '1123x1587') if essay.file.attached? %>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= will_paginate @essays, list_classes: %w(pagination justify-content-center),
                                                next_label: "&#62;", previous_label: "&#60;"  %>
      </div>
    </div>
  </div>
</div>