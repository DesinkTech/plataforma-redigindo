<div class="row">

    <% @themes.each do |theme| %>
    <div class="col-md-4">
        <%= button_to submit_essay_path(theme.hash_id), method: :get,
        class: "card bg-light shadow-sm mb-4", style: "padding: 0; width: 100% ;min-height: 250px; max-height: 250px;" do %>
        <div class="card-header">Tema</div>
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title"><%= theme.description %></h5>
        </div>
        <% end %>
    </div>
    <% end %>
    
    
</div>
<div class="row justify-content-center">
    <%= will_paginate @themes, list_classes: %w(pagination justify-content-center shadow-sm),
    next_label: "&#62;", previous_label: "&#60;" %>
</div>